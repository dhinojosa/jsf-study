<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
        version="2.1">
    <application>
        <message-bundle>
            com.evolutionnext.jsf.messages
        </message-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>districtConverter</managed-bean-name>
        <managed-bean-class>com.evolutionnext.jsf.DistrictConverter</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>districtFactoryBean</property-name>
            <value>#{districtFactoryBean}</value>
        </managed-property>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/person/create.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{register.save(person)}</from-action>
            <from-outcome>Success</from-outcome>
            <to-view-id>/person/thankyou.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>